{
  "compilerOptions": {
    /* ----- Основные опции ----- */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",

    /* ----- Совместимость ----- */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    /* ----- Строгость ----- */
    "strict": true,
    "skipLibCheck": true,

    /* ----- Дополнительно (для отладки) ----- */
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}